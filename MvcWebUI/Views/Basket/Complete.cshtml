@model MvcWebUI.Models.ShippingDetailsViewModel
@{
    ViewData["Title"] = "Complete Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Shipping Details</h2>
<form asp-controller="Basket" asp-action="Complete" method="post">
    <div class="form-group">
        <label asp-for="ShippingDetails.FirstName" ></label>
         <input type="text" asp-for="ShippingDetails.FirstName" placeholder="FirstName" class="form-control">
         <span asp-validation-for="ShippingDetails.FirstName"></span>
    </div>
    <div class="form-group">
        <label asp-for="ShippingDetails.LastName" ></label>
         <input type="text" asp-for="ShippingDetails.LastName" placeholder="LastName" class="form-control">
         <span asp-validation-for="ShippingDetails.LastName"></span>
    </div>
    <div class="form-group">
        <label asp-for="ShippingDetails.Email" ></label>
         <input type="text" asp-for="ShippingDetails.Email" placeholder="Email" class="form-control">
         <span asp-validation-for="ShippingDetails.Email"></span>
    </div>
    <div class="form-group">
        <label asp-for="ShippingDetails.Age" ></label>
         <input type="text" asp-for="ShippingDetails.Age" placeholder="Age" class="form-control">
         <span asp-validation-for="ShippingDetails.Age"></span>
    </div>
    <div class="form-group">
        <label asp-for="ShippingDetails.Address" ></label>
         <input type="text" asp-for="ShippingDetails.Address" placeholder="Address" class="form-control">
         <span asp-validation-for="ShippingDetails.Address"></span>
    </div>
    <div class="form-group">
        <label asp-for="ShippingDetails.City" ></label>
         <input type="text" asp-for="ShippingDetails.City" placeholder="City" class="form-control">
         <span asp-validation-for="ShippingDetails.City"></span>
    </div>

    <input type="submit" value="Complete Shopping" class="mt-4 btn btn-sm btn-success">
</form>