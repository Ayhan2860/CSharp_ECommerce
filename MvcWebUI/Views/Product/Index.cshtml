@model MvcWebUI.Models.ProductListViewModel

@{
    ViewData["Title"] = "Product Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container text-center">
  <div class="row">
    @foreach (var product in Model.Products)
    {
             <div class="col mb-3">
            <div class="card" style="width: 18rem;">
             <img src="https://img.freepik.com/free-vector/white-product-podium-with-green-tropical-palm-leaves-golden-round-arch-green-wall_87521-3023.jpg" class="card-img-top" alt="...">
                <div class="card-body">
                 <h5 class="card-title">@product.ProductName</h5>
                <p class="card-text">₺ @product.UnitPrice</p>
                <p class="card-text">₺ @product.UnitsInStock</p>
                <a style="background-color: teal;" class="btn btn-xs text-white" asp-controller="Basket" asp-action="AddToBasket" asp-route-productId="@product.ProductId" >Add to basket</a>
                </div>
            </div>
             </div>
    }
    
   <div class="d-flex justify-content-center">
     <product-list-pager 
current-category="@Model.CurrentCategory" 
current-page="@Model.CurrentPage" 
page-count="@Model.PageCount" 
page-size="@Model.PageSize">
</product-list-pager>
   </div>
</div>
 </div>