@model MvcWebUI.Models.ProductUpdateViewModel;
@{
    ViewData["Title"] = "Product Add Page";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2 style="color: teal; margin-bottom:10px">Update A Product</h2>
<form asp-controller="Admin" asp-action="UpdateProduct" method="post">
   <div class="form-group">
         <label asp-for="Product.ProductName"></label>
         <input class="form-control"  asp-for="Product.ProductName" type="text">
         <span asp-validation-for="Product.ProductName"></span>
   </div>
   <div class="form-group">
         <label asp-for="Product.UnitPrice"></label>
         <input class="form-control"  asp-for="Product.UnitPrice" type="text">
         <span asp-validation-for="Product.UnitPrice"></span>
   </div>
    <div class="form-group">
         <label asp-for="Product.UnitsInStock"></label>
         <input class="form-control"  asp-for="Product.UnitsInStock" type="text">
         <span asp-validation-for="Product.UnitsInStock"></span>
   </div>
   <div class="form-group">
         <label asp-for="Product.CategoryId"></label>
         <select asp-for="Product.CategoryId" asp-items='@(new SelectList(Model.Categories, "CategoryId", "CategoryName"))' class="form-control" >
            
         </select>
         <span asp-validation-for="Product.CategoryId"></span>
   </div>
     <input type="hidden" asp-for="Product.ProductId">
   <button type="submit" class="mt-4 btn btn-sm btn-warning">Update</button>
</form>