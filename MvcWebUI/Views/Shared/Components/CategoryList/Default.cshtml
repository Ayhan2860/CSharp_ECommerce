@model MvcWebUI.Models.CategoryListViewModel
@{
   var activeCss = "";
}
<div class="list-group ">
    @if(Model.CurrentCategory == 0)
         activeCss = "active-teal";
   <a href="~/Product/index?category=0" class="list-group-item teal @activeCss">All Categories</a>
 @foreach (var category in Model.Categories)
 {
   var css = "list-group-item teal";
   
    if(category.CategoryId == Model.CurrentCategory)
    {
       css += " active-teal";
    }
    
    <a href="~/Product/index?category=@category.CategoryId" class="@css">@category.CategoryName</a>
 }
</div>