<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MvcWebUI</title>
    <link rel="stylesheet" href="~/node_modules/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/node_modules/font-awesome/css/font-awesome.css">

<style>
  nav ul 
  {
    width: 20%;
    display: flex;
    justify-content: space-around !important;
  }
  nav ul li .nav-link
  {
    color: #fff !important;
  }

  
</style>
</head>

<body >
    <nav  style="background-color: teal; text-align:center" class="navbar navbar-expand-lg ">
  <div class="container-fluid d-flex justify-content-center">
    <a class="navbar-brand text-white fw-bold logo" asp-controller="Product" asp-action="Index">E-Commerce</a>
  </div>
</nav>  
    <div style="min-height: 80vh;"  class="container mt-3">
       <div class="row">
        <div  class=" col-md">
        <main role="main" class="pb-3">
          @if(TempData["message"] != null)
          {
              <div id="alertTag" class="alert alert-info" role="alert">@TempData["message"]</div>
          }
            @RenderBody()

          
        </main>
        </div>
       </div>
    </div>

    <footer style="height:100px; background:teal; color:#fff" class="border-top d-flex align-items-center  footer text-muted">
        <div class="container text-white text-center">
            &copy; 2022 - E-Commerce - <a  asp-controller="Product" class="text-white" asp-action="Index">Products</a>
        </div>
    </footer>
    <script src="~/node_modules/jquery/dist/jquery.min.js"></script>
     <script src="~/node_modules/bootstrap/dist/js/bootstrap.min.js"></script>
     <script src="~/node_modules/jquery-validation/dist/jquery.validate.min.js"></script>
     <script src="~/node_modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
     
    <script>
      function setOut(){
          const alertDiv = document.getElementById("alertTag");
          if(alertDiv)
          {
            setTimeout(()=>{
              alertDiv.remove();
            }, 2000)
          }
      }
      setOut();
    </script>
   
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
