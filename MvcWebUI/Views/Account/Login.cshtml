@using System.Threading.Tasks
@model MvcWebUI.Models.LoginViewModel
@{
    ViewData["Title"] = "Sign In Page";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="container d-flex justify-content-center">
  <div id="loginbox" style="margin-top: 50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
    <div class="panel panel-info">
        <div class="panel-heading">
            <h1 style="color: teal; text-align:center" class="panel-title">Sign In</h1>
        </div>
        <div class="panel-body" style="padding-top: 30px;">
            <div style="display: none;" class="alert alert-danger col-sm-12"></div>
          <form class="form-horizontal" method="post" asp-controller="Account" asp-action="Login" role="form">
             
             <div style="margin-bottom: 25px;">
            <div  class="input-group">
                <span class="input-group-text"><i class="fa fa-user" aria-hidden="true"></i></span>
                <input asp-for="UserName" class="form-control" placeholder="User Name" type="text">
            </div>
                <span class="ms-1" asp-validation-for="UserName"></span>
            </div>

            <div style="margin-bottom: 25px;">
            <div class="input-group">
                <span class="input-group-text"><i class="fa fa-lock" aria-hidden="true"></i></span>
                <input asp-for="Password" class="form-control" placeholder="Password">
            </div>
                <span class="ms-1" asp-validation-for="Password"></span>
            </div>
             <div style="margin-bottom: 25px;" class="input-group">               
                <div class="checkbox">
                    <label>
                        <input asp-for="RememberMe"> Remember Me
                    </label>
                </div>
            </div>
             <div class="form-group">
                <div class="col-sm-12 controls">
                    <input style="background-color: #008080 ;" type="submit" class="btn btn-success" value="Sign In">
                </div>
             </div>
             <div style="margin-top: 12px;" class="form-group">
                <div class="col-md-12 control">
                    <div style="border-top: 1px solid #888; padding-top:15px; font-size:85%">
                        Don't have an account!
                        <a asp-controller="Account" asp-action="Register" >Sign Up Here</a>
                    </div>
                </div>
             </div>
          </form>
        </div>
    </div>
  </div>
</div>