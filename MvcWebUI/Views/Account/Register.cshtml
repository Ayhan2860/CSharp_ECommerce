@using System.Threading.Tasks
@model MvcWebUI.Models.RegisterViewModel
@{
    ViewData["Title"] = "Product Add Page";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="container d-flex justify-content-center">
  <div id="loginbox" style="margin-top: 50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
    <div class="panel panel-info">
        <div class="panel-heading">
            <div style="color: teal;" class="panel-title">Sign Up</div>
            <div style="float: right; font-size: 85%; position:relative; top:-10px;">
                <a asp-controller="Account" asp-action="Login"> Sign In</a>
            </div>
        </div>
        <div class="panel-body" style="padding-top: 30px;">
            <div style="display: none ;" class="alert alert-danger col-sm-12"></div>
          <form class="form-horizontal" method="post" asp-controller="Account" asp-action="Register" role="form">
            <div style="margin-bottom: 25px;">
            <div  class="input-group">
                <span class="input-group-text"><i class="fa fa-user" aria-hidden="true"></i></span>
                <input asp-for="UserName" class="form-control" placeholder="User Name" type="text">
            </div>
            <span class="ms-1" asp-validation-for="UserName"></span>
            </div>

            <div style="margin-bottom: 25px;">
            <div  class="input-group">
                <span class="input-group-text"><i class="fa fa-envelope" aria-hidden="true"></i></span>
                <input asp-for="Email" class="form-control" placeholder="Email Address" type="text">  
            </div>
            <span class="ms-1" asp-validation-for="Email"></span>
            </div>

            <div style="margin-bottom: 25px;">
            <div  class="input-group">
                <span class="input-group-text"><i class="fa fa-lock" aria-hidden="true"></i></span>
                <input asp-for="Password" class="form-control" placeholder="Password" >
            </div>
                <span class="ms-1" asp-validation-for="Password"></span>
            </div>

            @* <div style="margin-bottom: 25px;">
                <div  class="input-group">
                <span class="input-group-text"><i class="fa fa-lock" aria-hidden="true"></i></span>
                <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" type="text">
                </div>
                <span class="ms-1" asp-validation-for="ConfirmPassword"></span>
            </div>              *@
             
             <div class="form-group">
                <div class="col-sm-12 controls">
                    <input style="background-color: #008080 ;" type="submit" class="btn btn-success" value="Sign Up">
                </div>
             </div>
             
          </form>
        </div>
    </div>
  </div>
</div>